<%- include('navbar'); -%>
<section class="mt-5">
  <div class="container py-5 py-md-7">
    <div class="row align-items-center pt-2">
      <% if (message){%>
      <div class="alert alert-danger"><%= message %></div>
      <%}%>
      <div class="col-md-6 col-lg-5 mb-5 mb-md-0">
        <div class="px-4 py-5 p-sm-5 rounded-3 card border-0 shadow">
          <h1 class="h3 pt-1">Sign in</h1>
          <p class="fs-ms text-muted">Sign in to your account using email and password provided during registration.</p>
          <form action="/signin" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="input-group mb-3">

              <i class="fas fa-envelope position-absolute top-50 start-0 translate-middle-y ms-3"></i>
              <input class="form-control rounded" type="email" placeholder="Email" name="email" required="">
            </div>
            <div class="input-group mb-3">
              <i class="fas fa-lock position-absolute top-50 start-0 translate-middle-y ms-3"></i>

              <div class="password-toggle w-100">
                <input class="form-control" type="password" placeholder="Password" name="password" required="">

              </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3 pb-1">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="keep-signed-2">
                <label class="form-check-label fs-sm" for="keep-signed-2">Keep me signed in</label>
              </div><a class="nav-link-style fs-ms" href="password-recovery.html">Forgot password?</a>
            </div>
            <button class="btn btn-primary d-block w-100" type="submit">Sign in</button>
            <div class="border-top text-center mt-4 pt-4">
              <p class="fs-sm fw-medium text-heading">Or sign in with</p>
              <div class="py-3">

                <div class="d-inline-block align-middle">
                  <a class="btn-social bs-google me-2 mb-2" href="/auth/google">
                    <i class="fa fa-google" aria-hidden="true"></i>
                  </a>
                  <a class="btn-social bs-facebook me-2 mb-2" href="#" data-bs-toggle="tooltip" title=""
                    data-bs-original-title="Sign in with Facebook" aria-label="Sign in with Facebook">
                    <i class="fa fa-facebook" aria-hidden="true"></i>
                  </a>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>


    <div class="col-md-6 offset-lg-1">
      <h2 class="h3">No account? Sign up</h2>
      <p class="fs-ms text-muted">Registration takes less than a minute but gives you full control over your orders.</p>
      <form class="row needs-validation" action="/signup" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="col-sm-6 mb-3">
          <label class="form-label" for="reg-fn">First name<sup class="text-danger ms-1">*</sup></label>
          <input class="form-control" type="text" required="" id="reg-fn" name="first_name">
          <div class="invalid-feedback">Please enter you first name!</div>
        </div>
        <div class="col-sm-6 mb-3">
          <label class="form-label" for="reg-ln">Last name<sup class="text-danger ms-1">*</sup></label>
          <input class="form-control" type="text" required="" id="reg-ln" name="last_name">
          <div class="invalid-feedback">Please enter you last name!</div>
        </div>
        <div class="col-sm-6 mb-3">
          <label class="form-label" for="reg-email">Email address<sup class="text-danger ms-1">*</sup></label>
          <input class="form-control" type="email" required="" id="reg-email" name="email">
          <div class="invalid-feedback">Please enter a valid email address!</div>
        </div>
        <div class="col-sm-6 mb-3">
          <label class="form-label" for="reg-phone">Phone number</label>
          <input class="form-control bg-image-0" type="text" id="reg-phone" name="mobile">
        </div>
        <div class="col-sm-6 mb-3">
          <label class="form-label" for="reg-password">Password<sup class="text-danger ms-1">*</sup></label>
          <input class="form-control" type="password" required="" id="reg-password" name="password">
          <div class="invalid-feedback">Please provide password!</div>
        </div>
        <div class="col-sm-6 mb-3">
          <label class="form-label" for="reg-confirm-password">Confirm password<sup
              class="text-danger ms-1">*</sup></label>
          <input class="form-control" type="password" required="" id="reg-confirm-password" name="confirmpassword">
          <div class="invalid-feedback">Password doesn't match!</div>
        </div>
        <div class="col-sm-6 pt-2">
          <button class="btn btn-primary d-block w-100" type="submit">Sign up</button>
        </div>
      </form>
    </div>
    </div>
  </div>
</section>
<%- include('footer'); -%>