<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/3a905d197c.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="css/index.css">
  <title>Stationary Station</title>
</head>

<body>
  <div class="card-deck">
    <% if (products.length>0) { %>
    <% products.forEach(function(product){ %>
    <!--single item -->

    <div class="col-lg-3 col-md-4 col-sm-6 px-2 mb-4 mx-auto">
      <div class="card bs-single-item">
        <div class="img-container">
          <img src=<%= product.imageurl %> class="card-img-top bs-card-img" alt="">
          <span class="bs-cart-icon">
            <form action="/cart" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <input type="hidden" name="productId" value="<%= product.id %>">
              <button class="btn btn-primary" type="submit"><i class="fas fa-shopping-cart"></i></button>
            </form>
          </span>
          <span class="badge bg-danger badge-shadow">Sale</span>
        </div>
        <div class="card-body">
          <h3 class="bs-card-title fs-sm"><%= product.name %></h3>
          <div class="bs-card-text d-flex justify-content-between align-item-center">
            <div class="bs-item-price">
              <span class="text-accent">
                Rs.<%= product.orig_price %><small>.00</small>
              </span>
            </div>
            <div class="bs-stars">
              <i class="fas fa-star star-icon"></i>
              <i class="fas fa-star star-icon"></i>
              <i class="fas fa-star star-icon"></i>
              <i class="fas fa-star star-icon"></i>
              <i class="fas fa-star star-icon"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!--end of single item -->
    <%}); %>
    <% } %>
  </div>
  <!-- Light topbar -->


  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  <!-- Option 2: Separate Popper and Bootstrap JS -->
  <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
</body>

</html>
