   <!-- School Books-->
  <% if (products.length>0) { %>
    <section class="pt-3 pt-md-4 px-3 ">
      <!-- Heading-->
      <div class="d-flex flex-wrap justify-content-between align-items-center pt-1 border-bottom pb-4 mb-4">
        <h2 class="h3 mb-0 pt-3 me-3">School Books</h2>
        <div class="pt-3"><a class="btn btn-outline-accent btn-sm" href="grocery-catalog.html">More products<i
              class="ci-arrow-right ms-1 me-n1"></i></a></div>
      </div>
      <div class="tns-carousel tns-controls-static tns-controls-outside tns-nav-enabled pt-2">
        <div class="tns-carousel-inner card-group" id="tns2"
          data-carousel-options="{&quot;items&quot;: 2, &quot;gutter&quot;: 16, &quot;controls&quot;: true, &quot;autoHeight&quot;: true, &quot;responsive&quot;: {&quot;0&quot;:{&quot;items&quot;:1}, &quot;480&quot;:{&quot;items&quot;:2}, &quot;720&quot;:{&quot;items&quot;:4}, &quot;991&quot;:{&quot;items&quot;:4}, &quot;1140&quot;:{&quot;items&quot;:5}, &quot;1300&quot;:{&quot;items&quot;:5}, &quot;1500&quot;:{&quot;items&quot;:5}}}">
        <% products.forEach(function(product){ %>
          <!-- Product-->
          <div>
            <div class="card h-100 product-card card-static pb-3">
              <%if(product.discPrice<product.origPrice){%>
              <span class="badge bg-danger badge-shadow">Sale</span>
              <%}%>
              <button class="btn-wishlist btn-sm" type="button" data-bs-toggle="tooltip" data-bs-placement="left"
                title="Add to wishlist">
                <i class="ci-heart"></i>
              </button>
              <div class="img-size">
                <a class="card-img-top d-block overflow-hidden" href="/single-item/<%=product.id%>">
                  <img src=<%= product.imageUrl %> alt="Product">
                </a>
              </div>
              <div class="card-body py-2">
                <a class="product-meta d-block fs-xs pb-1" href="#"><%=product.categoryName%></a>
                <h3 class="product-title fs-sm text-truncate">
                  <a href="/single-item/<%=product.id%>"><%= product.name %></a>
                </h3>
                <div class="product-price">
                 <span class="text-accent">₹<%= product.discPrice%></span>
                   <%if(product.discPrice<product.origPrice){%>
                  <del class="fs-sm text-muted">₹<%= product.origPrice%></del>
                  <%}%>
                </div>
              </div>
              <div class="product-floating-btn">
                <input type="hidden" name="_csrf"  value="<%= csrfToken %>">
                <input type="hidden" name="itemId"  value="<%= product.id  %>">
                <button class="btn btn-primary btn-shadow btn-sm add-cart" type="button">+<i
                    class="ci-cart fs-base ms-1"></i></button>
              </div>
            </div>
          </div>
          <!--<%}); %>-->
          
        </div>
      </div>
    </section>
    <% } %>
    <!-- End of Discounted products-->
